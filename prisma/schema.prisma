// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id          Int          @id @default(autoincrement())
  name        String
  last_name   String
  picture     String?
  experience  Experience?
  skill       Skill[]
  wish        Wish?
  education   Education[]
  intrests    Intrests?
  companyInfo CompanyInfo?
  contactInfo ContactInfo?
}

model ContactInfo {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  email      String
  phone      String
  address    String
}

model Experience {
  id         Int        @id @default(autoincrement())
  employee   Employee   @relation(fields: [employeeId], references: [id])
  employeeId Int
  industry   Industry[]
  network    Industry[] @relation("network")
  clients    Clients[]
}

model Clients {
  id         Int          @id @default(autoincrement())
  name       String
  experience Experience[]
  wish       Wish[]
}

model Industry {
  id         Int          @id @default(autoincrement())
  name       String
  experience Experience[]
  wish       Wish[]
  network    Experience[] @relation("network")
}

model Skill {
  id          Int        @id @default(autoincrement())
  name        String
  employee    Employee[]
  SkillType   SkillType? @relation(fields: [skillTypeId], references: [id])
  skillTypeId Int?
}

model SkillType {
  id    Int     @id @default(autoincrement())
  type  String
  skill Skill[]
}

model Wish {
  id                Int        @id @default(autoincrement())
  project           String
  industry          Industry[]
  clients           Clients[]
  further_education String?
  employee          Employee   @relation(fields: [employeeId], references: [id])
  employeeId        Int
}

model Education {
  id       Int        @id @default(autoincrement())
  degree   String
  employee Employee[]
}

model Intrests {
  id             Int      @id @default(autoincrement())
  hobbies        String?
  special_skills String?
  employee       Employee @relation(fields: [employeeId], references: [id])
  employeeId     Int
}

model CompanyInfo {
  id         Int      @id @default(autoincrement())
  location   String
  department String
  position   String
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
}
